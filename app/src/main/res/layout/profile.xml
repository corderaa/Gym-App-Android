<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/buttonReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#116173"
        android:text="@string/go_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.805"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="129dp"
        android:layout_height="110dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewNameLastName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_5357" />

    <TextView
        android:id="@+id/textViewNameLastName"
        android:layout_width="329dp"
        android:layout_height="37dp"
        android:text="@string/name_and_surname"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="413dp"
        android:layout_height="421dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonReturn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewNameLastName">

        <TextView
            android:id="@+id/lblLogin"
            android:layout_width="195dp"
            android:layout_height="47dp"
            android:paddingStart="20dp"
            android:text="@string/login"
            android:textAlignment="viewStart"
            android:textSize="20sp"
            app:layout_column="0"
            app:layout_row="0" />

        <TextView
            android:id="@+id/textViewLogin"
            android:layout_width="197dp"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="TextView"
            android:textSize="16sp"
            app:layout_column="1"
            app:layout_row="0" />

        <TextView
            android:id="@+id/lblMail"
            android:layout_width="195dp"
            android:layout_height="47dp"
            android:paddingStart="20dp"
            android:text="@string/email"
            android:textAlignment="viewStart"
            android:textSize="20sp"
            app:layout_column="0"
            app:layout_row="1" />

        <TextView
            android:id="@+id/textViewMail"
            android:layout_width="197dp"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="TextView"
            android:textSize="16sp"
            app:layout_column="1"
            app:layout_row="1" />

        <TextView
            android:id="@+id/lblLavel"
            android:layout_width="195dp"
            android:layout_height="47dp"
            android:paddingStart="20dp"
            android:text="@string/level"
            android:textAlignment="viewStart"
            android:textSize="20sp"
            app:layout_column="0"
            app:layout_row="2" />

        <TextView
            android:id="@+id/textViewLevel"
            android:layout_width="197dp"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="TextView"
            android:textSize="16sp"
            app:layout_column="1"
            app:layout_row="2" />

        <TextView
            android:id="@+id/lblAuthority"
            android:layout_width="195dp"
            android:layout_height="47dp"
            android:paddingStart="20dp"
            android:text="@string/role"
            android:textAlignment="viewStart"
            android:textSize="20sp"
            app:layout_column="0"
            app:layout_row="3" />

        <TextView
            android:id="@+id/textViewAuthority"
            android:layout_width="197dp"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="TextView"
            android:textSize="16sp"
            app:layout_column="1"
            app:layout_row="3" />

        <TextView
            android:id="@+id/textViewBirthDate"
            android:layout_width="197dp"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="TextView"
            android:textSize="16sp"
            app:layout_column="1"
            app:layout_row="4" />

        <TextView
            android:id="@+id/lblBirthDate"
            android:layout_width="195dp"
            android:layout_height="47dp"
            android:paddingStart="20dp"
            android:text="@string/birthday"
            android:textAlignment="viewStart"
            android:textSize="20sp"
            app:layout_column="0"
            app:layout_row="4" />

        <TextView
            android:id="@+id/lblTema"
            android:layout_width="195dp"
            android:layout_height="47dp"
            android:text="@string/theme"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_column="0"
            app:layout_row="6" />

        <Spinner
            android:id="@+id/spinner4"
            android:layout_width="223dp"
            android:layout_height="wrap_content"
            app:layout_column="1"
            app:layout_row="6"
            tools:ignore="TouchTargetSizeCheck" />

    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>