<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="408dp"
        android:layout_height="371dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/lblWorkoutName"
            android:layout_width="143dp"
            android:layout_height="63dp"
            android:gravity="center"
            android:lineSpacingExtra="16sp"
            android:text="Nombre:"
            android:textSize="16sp"
            app:layout_column="0"
            app:layout_row="0" />

        <TextView
            android:id="@+id/lblWorkoutDescription"
            android:layout_width="143dp"
            android:layout_height="64dp"
            android:gravity="center"
            android:text="Descripcion:"
            android:textSize="16sp"
            app:layout_column="0"
            app:layout_row="1" />

        <TextView
            android:id="@+id/lblLevel"
            android:layout_width="143dp"
            android:layout_height="63dp"
            android:gravity="center"
            android:text="Nivel:"
            android:textSize="16sp"
            app:layout_column="0"
            app:layout_row="2" />

        <TextView
            android:id="@+id/lblwVideoUrl"
            android:layout_width="143dp"
            android:layout_height="63dp"
            android:gravity="center"
            android:text="Url del Video:"
            android:textSize="16sp"
            app:layout_column="0"
            app:layout_row="3" />

        <TextView
            android:id="@+id/lblwTiempo"
            android:layout_width="143dp"
            android:layout_height="63dp"
            android:gravity="center"
            android:text="Tiempo Estimado:"
            android:textSize="16sp"
            app:layout_column="0"
            app:layout_row="4" />

        <EditText
            android:id="@+id/textViewWorkoutName"
            android:layout_width="265dp"
            android:layout_height="63dp"
            android:gravity="center"
            android:text="TextView"
            app:layout_column="1"
            app:layout_row="0" />

        <EditText
            android:id="@+id/textViewWorkoutDescription"
            android:layout_width="271dp"
            android:layout_height="65dp"
            android:gravity="center"
            android:text="TextView"
            app:layout_column="1"
            app:layout_row="1" />

        <EditText
            android:id="@+id/textViewLevel"
            android:layout_width="265dp"
            android:layout_height="63dp"
            android:gravity="center"
            android:text="TextView"
            app:layout_column="1"
            app:layout_row="2" />

        <EditText
            android:id="@+id/textViewVideoUrl"
            android:layout_width="265dp"
            android:layout_height="63dp"
            android:gravity="center"
            android:text="TextView"
            app:layout_column="1"
            app:layout_row="3" />

        <EditText
            android:id="@+id/textViewTiempo"
            android:layout_width="265dp"
            android:layout_height="63dp"
            android:gravity="center"
            android:text="TextView"
            app:layout_column="1"
            app:layout_row="4" />

        <Button
            android:id="@+id/editButton"
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:text="Editar"
            app:layout_column="0"
            app:layout_row="5" />

        <Button
            android:id="@+id/buttonDeleteWorkout"
            android:layout_width="197dp"
            android:layout_height="wrap_content"
            android:text="Borrar"
            android:textAlignment="center"
            app:layout_column="1"
            app:layout_row="5" />
    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>